{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ES2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "target": "es2020",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.tsx"
  ]
}
